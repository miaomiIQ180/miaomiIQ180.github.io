{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/i18n/*.json",
    "components.d.ts",
    "auto-imports.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
